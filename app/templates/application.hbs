<header>
    <h1 id='title'>The Iron Throne</h1>

    <p class="subtitle">In the game of thrones, you either win or you die.</p>
</header>
{{#if debugging}}
    {{debug-panel sharedState=sharedState me=me participants=participants}}
    <button {{action 'start'}}>Restart</button>
{{/if}}

<section class="messages">
    {{#if actionText}}
        <div>{{actionText}}</div>
    {{/if}}
    {{#if blockText}}
        <div>{{blockText}}</div>
    {{/if}}
</section>

{{outlet}}

<section class="players">
    <ul>
        {{#each game.players}}
            <li>{{person.displayName}}<span class="coins">{{coins}}</span><span class="roles">{{roles.length}}</span>
            </li>
        {{/each}}
    </ul>
</section>

<footer>
    <section class="assets">
        <div class="coins pull-left">
            {{myCoins}}
        </div>
        <div class="roles pull-right">
            <ul class="roles list--inline">
                {{#each myRoles}}
                    <li>{{name}}</li>
                {{/each}}
            </ul>
        </div>
        <div class="clear"></div>
    </section>
</footer>