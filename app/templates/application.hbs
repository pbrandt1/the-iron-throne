<header>
    <h1 id='title'>The Iron Throne</h1>
    <p class="subtitle">In the game of thrones, you either win or you die.</p>
</header>

<section class="new-game">
    <div>
        <button {{action 'newGame'}}>New Game</button>
    </div>
</section>

<section class="choice-list">
    <ul class="choice-list">
        {{#each choices}}
            <li>YEAH</li>
        {{/each}}
    </ul>
</section>

<section class="countdown">
    <div class="timer"><span class="timer-vaue">5</span></div>
    <a class="button button-stop">STOP</a>
</section>

<section class="players">
    <ul>
        {{#each game.players}}
            <li>{{person.displayName}}<span class="coins">{{coins}}</span><span class="roles">{{roles.length}}</span></li>
        {{/each}}
        <li>Robot Player<span class="coins">4</span><span class="roles">2</span></li>
        <li>Human Player<span class="coins">1</span><span class="roles">1</span></li>
    </ul>
</section>

<footer>
    <section class="assets">
        <div class="coins">4</div>
        <div class="roles">
            <ul class="roles">
                <li class="duke">Duke</li>
                <li class="assassin">Assassin</li>
            </ul>
        </div>
        <div class="clear"></div>
    </section>
</footer>